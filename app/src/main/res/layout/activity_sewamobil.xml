<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SewaMobil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/logo_rental"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ic_layout_border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gambar_mobil"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:background="@drawable/ic_bg_gambar"
            android:src="@drawable/gambar_mobil" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cera_pro"
                android:text="@string/kategori_mobil"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cera_light"
                android:text="@string/nama_mobil"
                android:textColor="@color/colorFontAbu"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rupiah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rp"
                    android:textColor="@color/colorFontAbu"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_item_description"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/harga"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorFontAbu"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/perhari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="1dp"
                    android:text="@string/perhari"
                    android:textColor="@color/colorFontAbu"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:background="@drawable/ic_layout_border"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cera_light"
                        android:text="@string/penyewa"
                        android:textColor="@color/colorFontAbu" />



                    <EditText
                        android:id="@+id/inputNama"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="55dp"
                        android:background="@drawable/ic_layout_border"
                        android:fontFamily="@font/cera_light"
                        android:hint="Masukan nama"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:textSize="14sp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cera_light"
                        android:text="@string/durasi"
                        android:textColor="@color/colorFontAbu" />


                    <EditText
                        android:id="@+id/inputDurasi"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="55dp"
                        android:background="@drawable/ic_layout_border"
                        android:fontFamily="@font/cera_light"
                        android:hint="Durasi sewa"
                        android:inputType="number"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/cera_pro"
        android:text="Checkout"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp" />
</LinearLayout>