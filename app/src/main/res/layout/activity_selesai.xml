<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.Selesai"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo_rental"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:background="@drawable/ic_bayartagihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/tv_nama"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="marquee"
            android:text="@string/transaksi"
            android:textColor="@color/colorFontAbu"
            android:fontFamily="@font/cera_pro"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_centang"/>






    </LinearLayout>
    <Button

        android:id="@+id/btnSelesai"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_button"
        android:fontFamily="@font/cera_pro"
        android:text="Lanjut"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:textSize="16sp"
        />
</LinearLayout>